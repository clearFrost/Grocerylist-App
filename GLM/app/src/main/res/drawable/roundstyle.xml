<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="120dp" />
            <stroke android:width="0dip" android:color="#fff2e6" />
            <solid android:color="#fff2e6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="120dp" />
            <stroke android:width="0dip" android:color="#fff2e6" />
            <gradient android:angle="-90" android:startColor="@android:color/holo_orange_light" android:endColor="#30ffffff" />
        </shape>
    </item>
</selector>